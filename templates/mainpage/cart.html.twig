{% extends 'base.html.twig' %}
{% block title %}Hello cart!{% endblock %}
{% block body %}
    {% set sum = 0 %}
    {% for item in items %}
        <div class="col-md-4">
            <a href="{{ path('product', {'id': item.shopItem.id}) }}" class="itemClass">
                <div class="card mb-4 shadow-sm">
                    <img style="margin-left:25%" width="50%" src="{{ item.shopItem.img }}" alt="">
                    <rect width="100%" height="100%" fill="#55595c"></rect>
                    <div class="card-body">
                        <h4>{{ item.shopItem.name }}</h4>
                        <p class="card-text">{{ item.shopItem.description }}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <h5>{{ item.shopItem.price }} $</h5>
                        </div>
                        <a href="product/{{ product.id }}" >
                            подробнее
                        </a>
                        {% set sum = sum + item.shopItem.price %}
                    </div>
                </div>
            </a>
        </div>
    {% endfor %}


{% endblock %}
