{% extends 'base.html.twig' %}
{% block title %}Hello product!{% endblock %}
{% block body %}

    <style>
        .example-wrapper {
            margin-left: 20%;
            margin-right: 20%;
        }
    </style>
    <div class="example-wrapper" >
        <h1>{{ product.name }}</h1>
        <hr>

        <div class="row" >
            <div class="col-auto d-none d-lg-block">
                <img class="bd-placeholder-img" width="200" height="250" src="/../{{ product.img }}" role="img" alt="/">
            </div>
            <div class="col p-4 d-flex flex-column position-static">
                <p class="mb-auto">{{ product.description }}</p>
                <h3 class="mb-1">{{ product.price }} $</h3>
                <a href="{{ path('shopAddToCart', {'id': product.id}) }}" class="btn btn-success mt-2" style="width: 200px;">Добавить в корзину</a>
            </div>

        </div>
    </div>


{% endblock %}
